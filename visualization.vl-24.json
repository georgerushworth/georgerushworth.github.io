  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "color": {"value": "#4269d0"},
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {
            "field": "score",
            "type": "quantitative",
            "title": "Happiness Score",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "white",
        "align": "left",
        "dx": 5,
        "fontWeight": "bold"
      },
      "encoding": {"text": {"field": "score", "format": ".2f"}}
    }
  ],
  "config": {
    "font": "Montserrat, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#F8FAFC",
    "bar": {"color": "#4269d0"},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Montserrat, sans-serif",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
