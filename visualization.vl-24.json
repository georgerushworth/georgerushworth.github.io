{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 10 Happiest Countries in 2023",
  "title": {
    "text": "Top 10 Happiest Countries in 2023",
    "subtitle": ["According to the 2023 World Happiness Report", ""],
    "anchor": "start"
  },
  "width": 600,
  "height": 400,
  "data": {
    "values": [
      {"country": "Finland", "score": 7.8},
      {"country": "Denmark", "score": 7.59},
      {"country": "Iceland", "score": 7.53},
      {"country": "Israel", "score": 7.47},
      {"country": "Netherlands", "score": 7.4},
      {"country": "Sweden", "score": 7.4},
