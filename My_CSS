/* === George's Portfolio CSS with CMU Serif Font === */
/* Clean, professional academic look using Computer Modern Serif (CMU Serif web equivalent) */

/* Import the Computer Modern Serif font from Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Computer+Modern+Serif&display=swap');

/* Base page styling */
body {
  font-family: 'Computer Modern Serif', 'CMU Serif', serif;
  font-size: 16px;
  color: #333;
  line-height: 1.6;
  background-color: #fff;
  margin: 0 auto;
  max-width: 800px;
  padding-top: 60px;
}

/* Headings */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Computer Modern Serif', serif;
  color: #222;
  margin-top: 24px;
  margin-bottom: 16px;
  font-weight: 600;
  line-height: 1.3;
}

/* Big and small heading classes */
.big {
  font-size: 2.5em;
}

h2 {
  font-size: 1.75em;
}

.small {
  font-size: 1.25em;
}

/* Paragraph text */
p {
  margin-bottom: 1em;
  font-weight: 400;
  font-size: 1em;
}

/* Section spacing */
section {
  margin-bottom: 2.5em;
}

/* Links */
a {
  color: #065f46; /* dark teal-green for a calm academic tone */
  text-decoration: none;
  transition: color 0.2s ease, text-decoration 0.2s ease;
}

a:hover {
