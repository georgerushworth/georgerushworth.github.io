{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Inflation - four G7 countries",
    "subtitle": ["Source: OECD", ""],
    "anchor": "start"
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/ONSinflation/data_OECD_inflation2.csv"
  },
  "transform": [
    {"calculate": "datum.Value/100", "as": "valueToUse"},
    {"calculate": "year(datum.TIME)", "as": "year"},
    {"filter": "datum.LOCATION!='JPN'"},
    {"filter": "datum.LOCATION!='CAN'"},
    {"filter": "datum.LOCATION!='ITA'"},
    {"filter": "datum.year >1999"}
  ],
  "params": [
    {
      "name": "countryHover",
      "select": {
        "type": "point",
        "fields": ["Country"],
        "on": "pointerover",
        "clear": "pointerout"
      }
    }
  ],
  "mark": {"type": "line", "strokeWidth": 2.5, "point": false},
  "encoding": {
    "x": {
      "field": "TIME",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "valueToUse",
      "type": "quantitative",
      "title": "Inflation Rate",
      "axis": {
        "format": "%",
        "grid": true,
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      }
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "title": null,
      "legend": {"orient": "top", "direction": "horizontal", "labelLimit": 150}
    },
    "opacity": {
      "condition": {"param": "countryHover", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "TIME", "type": "temporal", "title": "Date", "format": "%b %Y"},
      {
        "field": "valueToUse",
        "type": "quantitative",
        "title": "Inflation",
        "format": ".2%"
      }
    ]
  },
  "config": {
    "font": "Instrument Sans, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#F8FAFC",
    "range": {"category": {"scheme": "observable10"}},
    "line": {"strokeWidth": 2.5},
    "point": {"filled": true, "size": 60},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Instrument Sans, sans-serif",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "axisX": {"grid": false},
    "axisY": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false
    },
    "legend": {
      "titleFont": "Instrument Sans, sans-serif",
      "titleFontSize": 14,
      "titleColor": "#1a1a1a",
      "labelColor": "#1a1a1a",
      "labelFontSize": 12
    },
    "title": {
      "font": "Instrument Sans, sans-serif",
      "fontSize": 16,
      "color": "#1a1a1a",
      "subtitleFontSize": 14,
      "subtitleColor": "#676A86"
    }
  }
}
