{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Average Net Worth of Top 10 Billionaires by Year",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://georgerushworth.github.io/forbes_billionaires_history-3.csv"
  },
  "layer": [
    {"mark": {"type": "bar", "color": "#1976d2"}},
    {"mark": {"type": "text", "color": "white", "align": "center", "dy": 10}}
  ],
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": null},
    "y": {
      "field": "Average Net Worth of Top 10",
      "type": "quantitative",
      "scale": {"domain": [0, 200]},
      "axis": {
        "labelColor": "black",
        "titleColor": "black",
        "labelFontSize": 12,
        "titleFontSize": 14,
        "grid": false
      }
    },
    "color": {"value": "#1976d2"},
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {
        "field": "Average Net Worth of Top 10",
        "type": "quantitative",
        "title": "Avg. Net Worth (B USD)"
      }
    ]
  },
  "title": {
    "text": "Average Net Worth of Top 10 Billionaires (1987-2025)",
    "subtitle": "Forbes World's Billionaires List, in billions USD"
  },
  "config": {"axis": {"grid": false}, "view": {"stroke": null}}
}