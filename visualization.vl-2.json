{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Real GDP Per Capita",
    "subtitle": ["Current International USD, PPP", "Source: World Bank", ""],
    "anchor": "start"
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/EconomicsObservatory/courses/main/1/s1_example_data/chart2_GDP_pc_6_countries.csv",
    "format": {"type": "csv", "parse": {"Year": "date"}}
  },
  "params": [
    {
      "name": "countryHover",
      "select": {
        "type": "point",
        "fields": ["Country Name"],
        "on": "pointerover",
        "clear": "pointerout"
      }
    }
  ],
  "mark": {"type": "line", "strokeWidth": 2.5, "point": true},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "GDP pc",
      "type": "quantitative",
      "title": "GDP per capita (USD)",
      "axis": {
        "grid": true,
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "format": ",.0f",
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      }
    },
    "color": {
      "field": "Country Name",
      "type": "nominal",
      "legend": {
        "title": null,
        "orient": "top",
        "direction": "horizontal",
        "labelLimit": 150
      }
    },
    "opacity": {
      "condition": {"param": "countryHover", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
      {
        "field": "GDP pc",
        "type": "quantitative",
        "title": "GDP per capita",
        "format": ",.0f"
      }
    ]
  },
  "config": {
    "font": "Instrument Sans, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#F8FAFC",
    "range": {"category": {"scheme": "observable10"}},
    "line": {"strokeWidth": 2.5},
    "point": {"filled": true, "size": 60},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Instrument Sans, sans-serif",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "axisX": {"grid": false},
    "axisY": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false
    },
    "legend": {
      "titleFont": "Instrument Sans, sans-serif",
      "titleFontSize": 14,
      "titleColor": "#1a1a1a",
      "labelColor": "#1a1a1a",
      "labelFontSize": 12
    },
    "title": {
      "font": "Instrument Sans, sans-serif",
      "fontSize": 16,
      "color": "#1a1a1a",
      "subtitleFontSize": 14,
      "subtitleColor": "#676A86"
    }
  }
}
