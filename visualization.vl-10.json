{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "24-Hour Price Change (%)",
    "fontSize": 14,
    "fontWeight": "bold"
  },
  "width": 400,
  "height": 300,
  "data": {
    "url": "https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&order=market_cap_desc&per_page=10",
    "format": {"type": "json"}
  },
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "name",
      "type": "nominal",
      "sort": {"field": "price_change_percentage_24h", "order": "descending"},
      "title": null,
      "axis": {"labelFontSize": 12}
    },
    "x": {
      "field": "price_change_percentage_24h",
      "type": "quantitative",
      "title": "Price Change (%)",
      "axis": {"format": "+.2f"}
    },
    "color": {
      "condition": {
        "test": "datum.price_change_percentage_24h > 0",
        "value": "#2ecc71"
      },
      "value": "#e74c3c"
    },
    "tooltip": [
      {"field": "name", "title": "Cryptocurrency"},
      {
        "field": "price_change_percentage_24h",
        "title": "24h Change",
        "format": "+.2f"
      },
      {"field": "current_price", "title": "Current Price", "format": "$,.2f"}
    ]
  },
  "config": {}
}