{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.20.1.json",
  "columns": 2,
  "config": {
    "axis": {
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "labelColor": "#676A86",
      "labelFont": "Instrument Sans, sans-serif",
      "labelFontSize": 11,
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "tickSize": 4,
      "titleColor": "#676A86",
      "titleOpacity": 0.8
    },
    "axisX": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false
    },
    "axisY": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false
    },
    "background": "#F8FAFC",
    "font": "Instrument Sans, sans-serif",
    "title": {
      "color": "#1a1a1a",
      "font": "Instrument Sans, sans-serif",
      "fontSize": 16,
      "subtitleColor": "#676A86",
      "subtitleFontSize": 14
    },
    "view": {
      "continuousHeight": 300,
      "continuousWidth": 300,
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/georgerushworth/georgerushworth.github.io/refs/heads/main/ai_gap_data.csv"
  },
  "facet": {
    "column": {
      "field": "company",
      "header": {
        "labelFont": "Instrument Sans",
        "labelFontSize": 14,
        "title": null
      },
      "type": "nominal"
    }
  },
  "spacing": 40,
  "spec": {
    "encoding": {
      "color": {
        "field": "metric",
        "legend": null,
        "scale": {"domain": ["Spend", "Earn"], "range": ["#ef4444", "#10b981"]},
        "type": "nominal"
      },
      "tooltip": [
        {"field": "company", "title": "Company", "type": "nominal"},
        {"field": "metric", "title": "Type", "type": "nominal"},
        {
          "field": "value",
          "format": "$.1f",
          "title": "Billions",
          "type": "quantitative"
        }
      ],
      "x": {
        "axis": {"labelAngle": 0},
        "field": "metric",
        "title": null,
        "type": "nominal"
      },
      "y": {
        "axis": {"format": "$.0f", "tickCount": 3},
        "field": "value",
        "title": null,
        "type": "quantitative"
      }
    },
    "height": 120,
    "mark": {
      "cornerRadiusTopLeft": 3,
      "cornerRadiusTopRight": 3,
      "type": "bar"
    },
    "width": 220
  },
  "title": {
    "anchor": "start",
    "offset": 20,
    "subtitle": ["2025 TTM Estimates. Red = Spend, Green = Revenue."],
    "text": ["The $200bn Gamble: Spending vs. Earning"]
  }
}