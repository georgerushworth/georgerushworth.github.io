{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "US Economic Indicators Dashboard",
  "data": {
    "url": "https://raw.githubusercontent.com/georgerushworth/georgerushworth.github.io/refs/heads/main/us_economic_data.csv"
  },

  "transform": [
    {
      "filter": "toDate(datum.date) >= toDate('2015-01-01')"
    },
    {
      "lookup": "series",
      "from": {
        "data": {
          "values": [
            {"series": "US GDP", "label": "US GDP (Billions USD)"},
            {"series": "US Unemployment", "label": "US Unemployment (%)"},
            {"series": "US CPI", "label": "US CPI (Index)"},
            {"series": "Fed Funds Rate", "label": "Fed Funds Rate (%)"},
            {"series": "10-Year Treasury", "label": "10-Year Treasury (%)"},
            {"series": "30-Year Mortgage", "label": "30-Year Mortgage (%)"}
          ]
        },
        "key": "series",
        "fields": ["label"]
      }
    }
  ],

  "columns": 3,
  "facet": {
    "field": "label",
    "type": "nominal",
    "header": {
      "title": null,
      "labelFontSize": 14,
      "labelColor": "#1a1a1a",
      "labelPadding": 6
    }
  },

  "spec": {
    "width": 150,
    "height": 150,

    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false}
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "scale": {"type": "linear", "zero": false},
        "axis": {
          "labels": true,
          "ticks": true,
          "grid": true,
          "labelColor": "#676A86",
          "labelFontSize": 11,
          "tickCount": 4
        }
      }
    },

    "layer": [
      {
        "encoding": {
          "tooltip": [
            {
              "field": "date",
              "type": "temporal",
              "title": "Date",
              "format": "%b %Y"
            },
            {
              "field": "value",
              "type": "quantitative",
              "title": "Value",
              "format": ".1f"
            },
            {
              "field": "series",
              "type": "nominal",
              "title": "Series"
            }
          ]
        },
        "layer": [
          {"mark": {"type": "line", "strokeWidth": 2}},
          {
            "transform": [{"filter": {"param": "hover", "empty": false}}],
            "mark": {"type": "point", "size": 80}
          }
        ]
      },

      {
        "mark": "rule",
        "encoding": {
          "opacity": {
            "condition": {"value": 0.3, "param": "hover", "empty": false},
            "value": 0
          },
          "tooltip": [
            {
              "field": "date",
              "type": "temporal",
              "format": "%b %Y",
              "title": "Date"
            },
            {
              "field": "series",
              "type": "nominal",
              "title": "Series"
            },
            {
              "field": "value",
              "type": "quantitative",
              "format": ".1f",
              "title": "Value"
            }
          ]
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["date", "series"],
              "nearest": true,
              "on": "pointerover",
              "clear": "pointerout"
            }
          }
        ]
      }
    ]
  },

  "resolve": {
    "scale": {
      "y": "independent"
    }
  },

  "title": {
    "text": "US Economic Indicators",
    "subtitle": [
      "Data: Federal Reserve Economic Data (FRED) | 2015 - 2025",
      ""
    ],
    "anchor": "start"
  },

  "config": {
    "font": "Instrument Sans, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#F8FAFC",
    "range": {"category": {"scheme": "observable10"}},
    "point": {"filled": true, "size": 80, "color": "#4269d0", "opacity": 0.95},
    "line": {"color": "#4269d0", "strokeWidth": 2},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Instrument Sans, sans-serif",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "title": null,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "title": {
      "font": "Instrument Sans, sans-serif",
      "fontSize": 16,
      "color": "#1a1a1a",
      "subtitleFontSize": 14,
      "subtitleFont": "Instrument Sans, sans-serif",
      "subtitleColor": "#676A86",
      "anchor": "start",
      "offset": 20
    }
  }
}

