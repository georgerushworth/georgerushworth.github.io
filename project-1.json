{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Shiller CAPE Ratio: 154 Years of Market Valuations",
    "subtitle": [
      "Are we in a bubble? (1871-2025)",
      "Data: Robert Shiller (Yale University) | Annual values (January 1) | Updated: 2025",
      ""
    ],
    "anchor": "start"
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/georgerushworth/georgerushworth.github.io/refs/heads/main/cleanedpe.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {
        "type": "area",
        "line": {"color": "#4269d0", "strokeWidth": 2.5},
        "color": "#4269d0",
        "opacity": 0.3
      },
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": null,
          "axis": {
            "format": "%Y",
            "labelAngle": 0,
            "grid": false,
            "tickCount": 10
          }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "CAPE Ratio",
          "scale": {"domain": [0, 50]},
          "axis": {
            "grid": true,
            "gridDash": [1, 5],
            "gridOpacity": 0.5,
            "ticks": false,
            "labelPadding": 5,
            "titleAngle": 0,
            "titleAlign": "left",
            "titleBaseline": "bottom",
            "titleX": 0,
            "titleY": -5
          }
        },
        "tooltip": [
          {
            "field": "Date",
            "type": "temporal",
            "title": "Year",
            "format": "%Y"
          },
          {
            "field": "Value",
            "type": "quantitative",
            "title": "CAPE",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "data": {
        "values": [{"level": "Average", "y": 17}, {"level": "High", "y": 25}]
      },
      "mark": {"type": "rule", "strokeDash": [5, 5], "strokeWidth": 2},
      "encoding": {
        "y": {"field": "y", "type": "quantitative"},
        "color": {
          "field": "level",
          "type": "nominal",
          "scale": {
            "domain": ["Average", "High"],
            "range": ["#10b981", "#f59e0b"]
          },
          "legend": {"title": null, "orient": "top", "direction": "horizontal"}
        },
        "tooltip": [
          {"field": "level", "type": "nominal", "title": "Level"},
          {"field": "y", "type": "quantitative", "title": "CAPE Value"}
        ]
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color": "#ef4444",
        "size": 150
      },
      "encoding": {
        "x": {"datum": {"year": 2025}},
        "y": {"datum": 37.14},
        "tooltip": [
          {"datum": "2025", "title": "Year"},
          {"datum": "37.14", "title": "Current CAPE"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "dy": -15,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#ef4444"
      },
      "encoding": {
        "x": {"datum": {"year": 2025}},
        "y": {"datum": 37.14},
        "text": {"value": "37.1"}
      }
    }
  ],
  "config": {
    "font": "Montserrat, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#F8FAFC",
    "area": {"opacity": 0.3},
    "line": {"strokeWidth": 2.5},
    "point": {"filled": true},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Montserrat, sans-serif",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "axisX": {"grid": false},
    "axisY": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false
    },
    "legend": {
      "titleFont": "Montserrat, sans-serif",
      "titleFontSize": 14,
      "titleColor": "#1a1a1a",
      "labelColor": "#1a1a1a",
      "labelFontSize": 12
    },
    "title": {
      "font": "Montserrat, sans-serif",
      "fontSize": 16,
      "color": "#1a1a1a",
      "subtitleFontSize": 14,
      "subtitleColor": "#676A86"
    }
  }
}