{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "The Valuation Matrix: Growth vs. Price",
    "subtitle": [
      "Bubble Size: Market Cap",
      "Mag 7 (Blue Palette) vs. S&P 500 (Grey)",
      ""
    ],
    "anchor": "start"
  },
  "width": 600,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/georgerushworth/georgerushworth.github.io/refs/heads/main/valuation_bubble_data.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "calculate": "indexof(['MSFT','AAPL','NVDA','AMZN','GOOGL','META','TSLA'], datum.Ticker) >= 0 ? 'Magnificent 7' : 'S&P 500'",
      "as": "Group"
    },
    {"filter": "datum.Growth < 1.5"},
    {"filter": "datum.PE_Ratio < 150"}
  ],
  "params": [
    {
      "name": "GroupFilter",
      "bind": {
        "input": "select",
        "options": [null, "Magnificent 7", "S&P 500"],
        "labels": ["Show All", "Magnificent 7 Only", "Rest of S&P 500"],
        "name": "Filter View: "
      }
    }
  ],
  "mark": {
    "type": "circle",
    "stroke": "white",
    "strokeWidth": 1.5
  },
  "encoding": {
    "x": {
      "field": "Growth",
      "type": "quantitative",
      "title": "Growth Forecast (Earnings)",
      "axis": {
        "format": ".0%",
        "tickCount": 5,
        "grid": true,
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "titlePadding": 10
      },
      "scale": {"nice": true}
    },
    "y": {
      "field": "PE_Ratio",
      "type": "quantitative",
      "title": "Valuation (P/E Ratio)",
      "scale": {"nice": true},
      "axis": {
        "grid": true,
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      }
    },
    "size": {
      "field": "Market_Cap_B",
      "type": "quantitative",
      "scale": {"range": [100, 1200]},
      "legend": null
    },
    "order": {
      "field": "Market_Cap_B",
      "sort": "descending"
    },
    "color": {
      "condition": {
        "test": "datum.Group === 'S&P 500'",
        "value": "#cbd5e1"
      },
      "field": "Ticker",
      "type": "nominal",
      "scale": {
        "domain": ["NVDA", "MSFT", "AAPL", "AMZN", "GOOGL", "META", "TSLA"],
        "range": [
          "#0c4a6e",
          "#075985",
          "#0369a1",
          "#0284c7",
          "#0ea5e9",
          "#38bdf8",
          "#7dd3fc"
        ]
      },
      "legend": null
    },
    "opacity": {
      "condition": {
        "test": "GroupFilter == null || datum.Group == GroupFilter",
        "value": 0.85
      },
      "value": 0.15
    },
    "tooltip": [
      {"field": "Name", "type": "nominal", "title": "Company"},
      {"field": "Ticker", "type": "nominal", "title": "Ticker"},
      {"field": "PE_Ratio", "type": "quantitative", "title": "P/E Ratio", "format": ".1f"},
      {"field": "Growth", "type": "quantitative", "format": ".1%", "title": "Growth"},
      {"field": "Market_Cap_B", "type": "quantitative", "format": "$,.0f", "title": "Market Cap ($B)"}
    ]
  },
  "config": {
    "font": "Instrument Sans, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#F8FAFC",
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Instrument Sans, sans-serif",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "axisX": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false
    },
    "axisY": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false
    },
    "title": {
      "font": "Instrument Sans, sans-serif",
      "fontSize": 16,
      "color": "#1a1a1a",
      "subtitleFontSize": 14,
      "subtitleColor": "#676A86"
    }
  }
}
